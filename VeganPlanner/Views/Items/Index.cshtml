<head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>

<div id="FoodItems">
    <h2>Food Items</h2>
    <p class="lead">A compilation of all the ingredients and recipes to use in your Saucy Vegan meals!</p>
    <p class="my-3">
        <input style="float:left" class="form-control" type="text" data-bind="textInput: SearchString" placeholder="Search for...">
        <input class="btn btn-default" data-bind="click: function () { populateData(); }" value="Go!" />

        <select style="float: left; height:35px; padding: 2px 4px; border-radius: 3px 3px 3px 3px; border-color: lightgrey">
            <option value="">All</option>
        </select>
    </p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Is a Recipe</th>
                <th>Pantry Item</th>
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: Items">
            <tr>
                <td data-bind="text: name"></td>
                <td data-bind="text: category"></td>
                <td><input type="checkbox" data-bind="checked: isRecipe" /></td>
                <td><input type="checkbox" data-bind="checked: isPantryItem" /></td>
                <td>
                    <a style="color: grey;" class="" data-bind="click: function () { $root.editItem($data); }">Edit</a> |
                    <a style="color: grey;" class="">View</a> |
                    <a style="color: grey;" class=""> Delete</a>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="modal" id="ItemEditDialog" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" data-bind="with: CurrentItemBeingEdited">
        <div class="modal-dialog">
            <div class="modal-content" >
                <div data-bind="text: name"></div>
            </div>
        </div>
    </div>
</div>